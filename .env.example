# ============================================
# CONFIGURAÇÕES DO AGENTE SDR - FUTUREE AI
# ============================================

# ========== SUPABASE ==========
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ========== COHERE AI ==========
VITE_COHERE_API_KEY=your-cohere-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# ========== EVOLUTION API (WhatsApp) ==========
VITE_EVOLUTION_API_URL=http://localhost:8080
VITE_EVOLUTION_API_KEY=your-evolution-api-key-here
VITE_EVOLUTION_INSTANCE=futuree-sdr

# Variáveis do backend
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key-here
EVOLUTION_INSTANCE=futuree-sdr

# ========== OPENAI (Para Speech-to-Text - Whisper) ==========
VITE_OPENAI_API_KEY=your-openai-api-key-here
# Necessário apenas se você for processar mensagens de áudio

# ========== CONFIGURAÇÕES DO AGENTE ==========
SDR_AGENT_ENABLED=true
SDR_AUTO_RESPOND=true
SDR_QUALIFY_LEADS=true
SDR_HUMAN_TIMEOUT_MINUTES=15
SDR_TYPING_BUFFER_SECONDS=7

# ========== BACKEND ==========
PORT=4000
NODE_ENV=development

# ========== WEBHOOK ==========
# URL onde o seu backend está hospedado (para configurar na Evolution API)
WEBHOOK_URL=https://seu-dominio.com/api/webhook/whatsapp
