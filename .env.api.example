# ===========================================
# CONFIGURAÇÃO DA API REST (OPCIONAL)
# ===========================================

# Porta do servidor
PORT=3001

# URL do frontend (para CORS)
FRONTEND_URL=http://localhost:8080

# ===========================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ===========================================

# Se quiser usar PostgreSQL direto (opcional)
DATABASE_URL=postgresql://user:password@localhost:5432/futuree_db

# ===========================================
# CONFIGURAÇÃO WHATSAPP API (OPCIONAL)
# ===========================================

# Exemplo com Twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Exemplo com 360Dialog
DIALOG_API_KEY=your_api_key
DIALOG_PHONE_NUMBER_ID=your_phone_number_id

# ===========================================
# CONFIGURAÇÃO SUPABASE (PARA SINCRONIZAÇÃO)
# ===========================================

# Mesmo que o frontend
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key